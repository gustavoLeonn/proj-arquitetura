public class ConversaoService {

    public double celsiusParaFahrenheit(TemperaturaInput celsius) {
        // Fórmula: (C * 9/5) + 32
        return (celsius.getValor() * 1.8) + 32;
    }

    public double fahrenheitParaCelsius(TemperaturaInput fahrenheit) {
        // Fórmula: (F - 32) * 5/9
        return (fahrenheit.getValor() - 32) / 1.8;
    }
}
